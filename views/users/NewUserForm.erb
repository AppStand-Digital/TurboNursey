<!-- views/users/new.erb -->
<h1>New User</h1>
<% if @errors %>
  <ul style="color:red">
    <% @errors.each do |e| %><li><%= e %></li><% end %>
  </ul>
<% end %>
<form action="/users" method="post">
  <p>Name: <input name="name" /></p>
  <p>Email: <input name="email" /></p>
  <button type="submit">Create</button>
</form>
<p><a href="/users">Back</a></p>
