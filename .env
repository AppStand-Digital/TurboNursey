
RACK_ENV=production
APP_ENV=production

# Puma binding: UNIX socket for Nginx proxy
PUMA_SOCKET=unix:///var/run/nhs.sock
# Optional explicit bind (overrides socket if set)
# PUMA_BIND=unix:///var/run/nhs.sock

# Puma concurrency
PUMA_THREADS=5
WEB_CONCURRENCY=2
PUMA_PRELOAD=1

# Puma files/paths
PUMA_PIDFILE=tmp/pids/puma.pid
PUMA_STATE_PATH=tmp/pids/puma.state
PUMA_STDOUT=log/puma.stdout.log
PUMA_STDERR=log/puma.stderr.log

# App base URL (used when generating QR codes)
APP_BASE_URL=https://nhs.rubystand.io

# Session secret (generated securely; 64 hex chars)
SESSION_SECRET=3f8f4c7b8a1e4bd6a2c9d1e7f4b2c3d59a6e1b7c4f2a9d0e6b1c3d5f7a9b2c4d