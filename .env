
# ----- App domain -----
APP_DOMAIN=nhs.rubystand.io

# ----- Rack/Sinatra environment -----
RACK_ENV=production
APP_ENV=production

NGINX_SSL_CERT=/etc/letsencrypt/live/nhs.rubystand.io/fullchain.pem
NGINX_SSL_KEY=/etc/letsencrypt/live/nhs.rubystand.io/privkey.pem

# Puma binding: UNIX socket for Nginx proxy
PUMA_SOCKET=unix:///var/run/nhs.sock
